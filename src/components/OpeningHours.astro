---
const days = [
    { name: "Montag", hours: "18:00 - 00:00 Uhr" },
    { name: "Dienstag", hours: "18:00 - 00:00 Uhr" },
    { name: "Mittwoch", hours: "18:00 - 00:00 Uhr" },
    { name: "Donnerstag", hours: "18:00 - 00:00 Uhr" },
    { name: "Freitag", hours: "18:00 - 03:00 Uhr" },
    { name: "Samstag", hours: "14:00 - 03:00 Uhr" },
    { name: "Sonntag", hours: "14:00 - 00:00 Uhr" },
];

const todayIndex = (new Date().getDay() + 6) % 7;
---

<div
    class="opening-hours-container w-full max-w-sm mx-auto bg-white/[0.02] border border-white/5 p-8 rounded-none"
>
    <div class="divide-y divide-white/5">
        {
            days.map((day, index) => {
                const isToday = index === todayIndex;
                return (
                    <div
                        class={`flex justify-between items-center py-3 px-4 rounded-none transition-all duration-300 ${
                            isToday
                                ? "bg-secondary text-black font-bold scale-[1.02] shadow-[0_0_20px_rgba(255,224,138,0.2)]"
                                : "text-gray-400"
                        }`}
                    >
                        <span class="text-xs uppercase tracking-widest flex items-center gap-2">
                            {isToday && (
                                <span class="w-1.5 h-1.5 bg-black rounded-none animate-pulse" />
                            )}
                            {day.name}
                        </span>
                        <span
                            class={`text-xs ${
                                isToday ? "text-black" : "text-gray-500"
                            }`}
                        >
                            {day.hours}
                        </span>
                    </div>
                );
            })
        }
    </div>

    <div class="mt-8 pt-6 border-t border-white/5 text-center">
        <p
            class="text-[10px] uppercase tracking-[0.2em] text-secondary font-bold"
        >
            {"Wir freuen uns auf dich"}
        </p>
    </div>
</div>

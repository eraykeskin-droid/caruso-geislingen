---
interface Props {
    maxWidth?: string;
    showLinks?: boolean;
    showCredits?: boolean;
}

const {
    maxWidth = "max-w-4xl",
    showLinks = true,
    showCredits = true,
} = Astro.props;
---

<footer class="py-12 bg-black border-t border-white/5 mt-auto">
    <div
        class={`${maxWidth} mx-auto px-6 flex flex-col md:flex-row justify-between items-center gap-8 text-sm text-gray-400`}
    >
        <div class="flex flex-col items-center md:items-start gap-2">
            <div>© 2022 Café Caruso Geislingen</div>
            {
                showCredits && (
                    <div class="text-[10px] uppercase tracking-widest opacity-80">
                        Umgesetzt von{" "}
                        <a
                            href="https://kesking-design.de"
                            target="_blank"
                            class="hover:text-secondary transition-colors"
                        >
                            Kesking-Design.de
                        </a>
                    </div>
                )
            }
        </div>

        {
            showLinks && (
                <div class="flex gap-6">
                    <a
                        href="/impressum"
                        class="hover:text-secondary transition-colors underline decoration-secondary/30 underline-offset-4"
                    >
                        Impressum
                    </a>
                    <a
                        href="/datenschutz"
                        class="hover:text-secondary transition-colors underline decoration-secondary/30 underline-offset-4"
                    >
                        Datenschutz
                    </a>
                </div>
            )
        }
    </div>
</footer>

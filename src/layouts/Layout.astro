---
import "../styles/global.css";
import CookieBanner from "../components/CookieBanner.astro";
import Footer from "../components/Footer.astro";

interface Props {
	title: string;
	description?: string;
	maxWidth?: string;
	showFooterLinks?: boolean;
	showFooterCredits?: boolean;
}

const {
	title,
	description = "Café Caruso – Shisha Bar & Lounge in Geislingen an der Steige",
	maxWidth,
	showFooterLinks = true,
	showFooterCredits = true,
} = Astro.props;
---

<!DOCTYPE html>
<html lang="de">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta
			name="format-detection"
			content="telephone=no, date=no, address=no, email=no"
		/>
		<link rel="icon" type="image/x-icon" href="/images/favicon.ico" />
		<link
			rel="icon"
			type="image/png"
			sizes="16x16"
			href="/images/favicon-16x16.png"
		/>
		<link rel="icon" type="image/svg+xml" href="/images/favicon.svg" />
		<link
			rel="icon"
			type="image/png"
			sizes="32x32"
			href="/images/favicon-32x32.png"
		/>
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Café Caruso</title>
		<meta name="description" content={description} />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />

		<!-- Structured Data (Schema.org) -->
		<script type="application/ld+json" is:inline>
			{
				"@context": "https://schema.org",
				"@graph": [
					{
						"@type": "WebSite",
						"@id": "https://caruso-geislingen.de/#website",
						"url": "https://caruso-geislingen.de/",
						"name": "Café Caruso",
						"publisher": {
							"@id": "https://caruso-geislingen.de/#organization"
						}
					},
					{
						"@type": "BarOrPub",
						"@id": "https://caruso-geislingen.de/#organization",
						"name": "Café Caruso",
						"url": "https://caruso-geislingen.de/",
						"logo": "https://caruso-geislingen.de/images/caruso-logo-white.png",
						"image": "https://caruso-geislingen.de/images/caruso-logo-white.png",
						"address": {
							"@type": "PostalAddress",
							"streetAddress": "Hauptstraße 36",
							"addressLocality": "Geislingen an der Steige",
							"postalCode": "73312",
							"addressCountry": "DE"
						},
						"telephone": "+4973319467928",
						"priceRange": "$$"
					},
					{
						"@type": "ItemList",
						"itemListElement": [
							{
								"@type": "SiteNavigationElement",
								"position": 1,
								"name": "Getränkekarte",
								"url": "https://caruso-geislingen.de/karte"
							},
							{
								"@type": "SiteNavigationElement",
								"position": 2,
								"name": "Reservieren",
								"url": "https://caruso-geislingen.de/reservieren"
							}
						]
					}
				]
			}
		</script>
	</head>
	<body>
		<slot />
		<Footer
			maxWidth={maxWidth}
			showLinks={showFooterLinks}
			showCredits={showFooterCredits}
		/>

		<CookieBanner />

		<script>
			// Intercept all internal anchor links to keep the URL clean (remove #)
			document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
				anchor.addEventListener("click", (e) => {
					const target = e.currentTarget as HTMLAnchorElement;
					const href = target.getAttribute("href");
					if (!href || href === "#") return;

					e.preventDefault();
					const targetElement = document.querySelector(href);

					if (targetElement) {
						targetElement.scrollIntoView({
							behavior: "smooth",
						});

						// Remove the hash from the URL without jumping
						window.history.pushState(
							{},
							"",
							window.location.pathname
						);
					}
				});
			});
		</script>
	</body>
</html>

<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: "Inter", system-ui, sans-serif;
		background: #000;
	}
</style>

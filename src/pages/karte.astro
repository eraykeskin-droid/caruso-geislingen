---
import Layout from "../layouts/Layout.astro";
import CategorySection from "../components/CategorySection.astro";
import MenuCard from "../components/MenuCard.astro";

// Initial empty state, will be filled by client-side fetch for dynamic updates
---

<Layout title="Getränkekarte">
    <main class="bg-black min-h-screen">
        <!-- Header -->
        <header
            class="py-12 px-6 border-b border-white/5 sticky top-0 bg-black/80 backdrop-blur-md z-30"
        >
            <div class="max-w-4xl mx-auto flex justify-between items-center">
                <a
                    href="/"
                    class="text-secondary hover:text-white transition-colors"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="24"
                        height="24"
                        fill="currentColor"
                        viewBox="0 0 16 16"
                    >
                        <path
                            fill-rule="evenodd"
                            d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"
                        ></path>
                    </svg>
                </a>
                <h1
                    class="text-xl uppercase tracking-[0.2em] font-bold text-white"
                >
                    Getränkekarte
                </h1>
                <div class="w-6"></div>
            </div>
        </header>

        <!-- Menu Content Holder -->
        <div id="menu-container" class="py-12 px-6 max-w-4xl mx-auto">
            <div
                class="flex flex-col items-center justify-center py-20 animate-pulse"
            >
                <div
                    class="w-12 h-12 border-4 border-secondary/20 border-t-secondary rounded-full animate-spin mb-4"
                >
                </div>
                <p class="text-xs text-gray-500 uppercase tracking-widest">
                    Lade Karte...
                </p>
            </div>
        </div>

        <div class="pb-12 text-center border-t border-white/5 mt-12">
            <p
                class="text-[10px] text-gray-600 uppercase tracking-[0.3em] py-8"
            >
                Café Caruso &copy; 2024 &bull; Geislingen an der Steige
            </p>
        </div>
    </main>
</Layout>

<script>
    async function loadMenu() {
        const container = document.getElementById("menu-container");
        if (!container) return;

        try {
            const res = await fetch("/api/get-menu.php");
            const contentType = res.headers.get("content-type");

            let data;
            if (contentType && contentType.includes("application/json")) {
                data = await res.json();
            } else {
                throw new Error("No JSON response (Local Dev)");
            }

            if (!Array.isArray(data) || data.length === 0) {
                renderMockFallback(container);
                return;
            }

            renderMenu(container, data);
            // Save to cache for local dev fallback
            localStorage.setItem("caruso_menu_cache", JSON.stringify(data));
        } catch (err) {
            console.warn("API Fetch failed, checking cache...", err);
            const cached = localStorage.getItem("caruso_menu_cache");
            if (cached) {
                renderMenu(container, JSON.parse(cached));
            } else {
                renderMockFallback(container);
            }
        }
    }

    function renderMenu(container: HTMLElement, data: any[]) {
        container.innerHTML = "";
        data.forEach((category) => {
            const section = document.createElement("div");
            section.className = "mb-16 animate-fade-in";

            let itemsHtml = "";
            if (category.items && Array.isArray(category.items)) {
                itemsHtml = category.items
                    .map((item: any) => {
                        const price =
                            typeof item.price === "number"
                                ? item.price.toFixed(2)
                                : parseFloat(item.price).toFixed(2);
                        return (
                            '<div class="group">' +
                            '<div class="flex justify-between items-baseline mb-2">' +
                            '<h3 class="text-white font-bold tracking-wide uppercase text-sm group-hover:text-secondary transition-colors italic">' +
                            item.name +
                            "</h3>" +
                            '<div class="flex-grow border-b border-dotted border-white/10 mx-4"></div>' +
                            '<span class="text-secondary font-bold text-sm tracking-tighter">' +
                            price +
                            "€</span>" +
                            "</div>" +
                            '<div class="flex justify-between text-[10px] text-gray-500 uppercase tracking-widest">' +
                            "<span>" +
                            (item.info || "") +
                            "</span>" +
                            "<span>" +
                            (item.unit || "") +
                            "</span>" +
                            "</div>" +
                            "</div>"
                        );
                    })
                    .join("");
            }

            const isSpecial = !!category.is_special;
            const specialBadge = isSpecial
                ? '<span class="px-3 py-1 bg-secondary/10 text-secondary text-[10px] font-bold uppercase tracking-widest rounded-full border border-secondary/20 animate-pulse">Special</span>'
                : "";
            const bgColor = category.bg_color || "#ffe08a";
            const titleColor = isSpecial ? bgColor : "#fff";

            section.innerHTML =
                '<div class="mb-10 flex items-center gap-6">' +
                '<h2 class="text-2xl md:text-3xl font-bold uppercase tracking-tighter italic border-l-4 pl-6" style="border-color: ' +
                bgColor +
                "; color: " +
                titleColor +
                '">' +
                category.name +
                "</h2>" +
                specialBadge +
                "</div>" +
                '<div class="grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-8">' +
                itemsHtml +
                "</div>";

            container.appendChild(section);
        });
    }

    function renderMockFallback(container: HTMLElement) {
        const mockData = [
            {
                name: "Cocktails",
                is_special: true,
                bg_color: "#ffe08a",
                items: [
                    {
                        name: "Sex on the Beach",
                        price: 9.5,
                        unit: "0,4l",
                        info: "Wodka, Pfirsichlikör, Säfte",
                    },
                    {
                        name: "Caipirinha",
                        price: 8.9,
                        unit: "0,4l",
                        info: "Pitu, Limetten, Rohrzucker",
                    },
                ],
            },
        ];
        renderMenu(container, mockData);
    }

    loadMenu();
</script>

<style is:global>
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    .animate-fade-in {
        animation: fadeIn 0.8s ease-out forwards;
    }
</style>

---
import Layout from "../layouts/Layout.astro";
import CategorySection from "../components/CategorySection.astro";
import MenuCard from "../components/MenuCard.astro";

// Initial empty state, will be filled by client-side fetch for dynamic updates
---

<Layout title="Getränkekarte">
    <main class="bg-black min-h-screen">
        <!-- Header -->
        <header
            class="py-12 px-6 border-b border-white/5 sticky top-0 bg-black/80 backdrop-blur-md z-30"
        >
            <div class="max-w-4xl mx-auto flex justify-between items-center">
                <a
                    href="/"
                    class="text-secondary hover:text-white transition-colors"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="24"
                        height="24"
                        fill="currentColor"
                        viewBox="0 0 16 16"
                    >
                        <path
                            fill-rule="evenodd"
                            d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"
                        ></path>
                    </svg>
                </a>
                <h1
                    class="text-xl uppercase tracking-[0.2em] font-bold text-white"
                >
                    Getränkekarte
                </h1>
                <div class="w-6"></div>
            </div>
        </header>

        <!-- Menu Content Holder -->
        <div id="menu-container" class="py-12 px-6 max-w-4xl mx-auto">
            <div
                class="flex flex-col items-center justify-center py-20 animate-pulse"
            >
                <div
                    class="w-12 h-12 border-4 border-secondary/20 border-t-secondary rounded-full animate-spin mb-4"
                >
                </div>
                <p class="text-xs text-gray-500 uppercase tracking-widest">
                    Lade Karte...
                </p>
            </div>
        </div>

        <div class="pb-12 text-center">
            <p class="text-xs text-gray-600 uppercase tracking-widest mb-4">
                Alle Preise inkl. MwSt.
            </p>
            <div class="flex justify-center gap-4">
                <div class="h-1 w-8 bg-secondary/20"></div>
                <div class="h-1 w-8 bg-secondary"></div>
                <div class="h-1 w-8 bg-secondary/20"></div>
            </div>
        </div>
    </main>
</Layout>

<script>
    async function loadMenu() {
        const container = document.getElementById("menu-container");
        if (!container) return;

        try {
            const res = await fetch("/api/get-menu.php");
            const data = await res.json();

            if (!Array.isArray(data) || data.length === 0) {
                container.innerHTML =
                    '<p class="text-center text-gray-500 italic py-20">Aktuell ist keine Karte verfügbar.</p>';
                return;
            }

            container.innerHTML = ""; // Clear loader

            data.forEach((category: any) => {
                const section = document.createElement("div");
                section.className = "mb-16 animate-fade-in";

                section.innerHTML = `
                    <div class="mb-10 flex items-center gap-6">
                        <h2 class="text-2xl md:text-3xl font-bold uppercase tracking-tighter italic border-l-4 pl-6" style="border-color: ${
                            category.bg_color || "#ffe08a"
                        }; color: ${
                    category.is_special
                        ? category.bg_color || "#ffe08a"
                        : "#fff"
                }">
                            ${category.name}
                        </h2>
                        ${
                            category.is_special
                                ? '<span class="px-3 py-1 bg-secondary/10 text-secondary text-[10px] font-bold uppercase tracking-widest rounded-full border border-secondary/20 animate-pulse">Special</span>'
                                : ""
                        }
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-8">
                        ${category.items
                            .map(
                                (item: any) => `
                            <div class="group">
                                <div class="flex justify-between items-baseline mb-2">
                                    <h3 class="text-white font-bold tracking-wide uppercase text-sm group-hover:text-secondary transition-colors italic">
                                        ${item.name}
                                    </h3>
                                    <div class="flex-grow border-b border-dotted border-white/10 mx-4"></div>
                                    <span class="text-secondary font-bold text-sm tracking-tighter">${parseFloat(
                                        item.price
                                    ).toFixed(2)}€</span>
                                </div>
                                <div class="flex justify-between text-[10px] text-gray-500 uppercase tracking-widest">
                                    <span>${item.info || ""}</span>
                                    <span>${item.unit || ""}</span>
                                </div>
                            </div>
                        `
                            )
                            .join("")}
                    </div>
                `;
                container.appendChild(section);
            });
        } catch (err) {
            console.error("Error:", err);
            container.innerHTML =
                '<p class="text-center text-red-500/50 italic py-20 uppercase text-xs">Fehler beim Laden der Karte.</p>';
        }
    }

    loadMenu();
</script>

